                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="serif"
                android:text="Cartão de débito"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView51"
                android:layout_alignTop="@+id/textView51"
                android:layout_toEndOf="@+id/textView51"
                android:background="@drawable/button_clicked"
                android:fontFamily="serif"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/recyclerView10"
                android:layout_below="@+id/textView51"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/imageView62"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignStart="@+id/textView51"
                android:layout_below="@+id/recyclerView11"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@color/amarelo" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
