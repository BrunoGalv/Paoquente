<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etEmaiLayoutAttEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSenhaAntigaLayoutAttSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme"
        android:visibility="invisible">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etemailAttEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Novo email"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etSenhaLayoutAttSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/etSenhaAntigaLayoutAttSenha"
        android:layout_alignStart="@+id/etSenhaAntigaLayoutAttSenha"
        android:layout_below="@+id/etSenhaAntigaLayoutAttSenha"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#ff5a595b">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSenhaAttSenha"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nova senha"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etSenhaAntigaLayoutAttSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView147"
        android:layout_alignStart="@+id/imageView147"
        android:layout_below="@+id/imageView147"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#ff5a595b">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSenhaAntigaAttSenha"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Senha atual"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView147"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@+id/textView182"
        android:layout_alignStart="@+id/textView182"
        android:layout_below="@+id/textView182"
        android:layout_marginTop="10dp"
        app:srcCompat="@color/amarelo" />

    <TextView
        android:id="@+id/textView182"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:maxLines="1"
        android:text="Atualizar senha"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
</RelativeLayout>