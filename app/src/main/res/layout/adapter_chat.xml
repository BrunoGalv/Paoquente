<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="24dp">

        <RelativeLayout
            android:id="@+id/relativeLayout32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="90dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="90dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroundchat"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageView115"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/textView139"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                app:srcCompat="@color/cinza" />

            <TextView
                android:id="@+id/textView139"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:textColor="@android:color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/backgroundchatme"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageView117"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_below="@+id/textView140"
                android:layout_alignStart="@+id/textView140"
                android:layout_alignEnd="@+id/textView140"
                android:layout_alignLeft="@+id/textView140"
                android:layout_alignRight="@+id/textView140"
                android:layout_marginEnd="-15dp"
                android:layout_marginRight="-15dp"
                app:srcCompat="@color/colorPrimary" />

            <TextView
                android:id="@+id/textView140"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="serif"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>