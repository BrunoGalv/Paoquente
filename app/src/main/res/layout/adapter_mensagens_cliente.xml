<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutMensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_clicked">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewMensagens"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textView178"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/circleImageViewMensagens"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/circleImageViewMensagens"
            android:layout_toRightOf="@+id/circleImageViewMensagens"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView179"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView178"
            android:layout_alignStart="@+id/textView178"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:textColor="@color/common_google_signin_btn_text_light_focused"
            android:textSize="14sp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/textView178" />

        <ImageView
            android:id="@+id/imageView161"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/circleImageViewMensagens"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@color/colorPrimaryDark"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>