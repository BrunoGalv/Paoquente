<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinzaClaro"
    tools:context="com.realvibedev.paoquente.TelaPadarias">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.v4.view.ViewPager
                android:id="@+id/container3"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <ImageView
                android:id="@+id/imageView67"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/container3"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/ballimagesliderfull" />

            <ImageView
                android:id="@+id/imageView108"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/container3"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/imageView67"
                android:visibility="invisible"
                app:srcCompat="@drawable/ballimageslider" />

            <ImageView
                android:id="@+id/imageView122"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/container3"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/imageView108"
                android:visibility="invisible"
                app:srcCompat="@drawable/ballimageslider" />

            <ImageView
                android:id="@+id/imageView69"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/container3"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/imageView122"
                android:visibility="invisible"
                app:srcCompat="@drawable/ballimageslider" />

            <ImageView
                android:id="@+id/imageView130"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_alignBottom="@+id/container3"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/imageView69"
                android:visibility="invisible"
                app:srcCompat="@drawable/ballimageslider" />

            <TextView
                android:id="@+id/textView143"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container3"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="Promoções"
                android:textColor="@color/amarelo"
                android:textSize="22sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/textView143"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Padarias"
                android:textColor="@color/amarelo"
                android:textSize="22sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textView"
                android:background="@android:color/white" />

            <ProgressBar
                android:id="@+id/progressBar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView143"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:theme="@style/MyEditTextTheme"
                android:visibility="invisible" />

            <ProgressBar
                android:id="@+id/progressBar16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:theme="@style/MyEditTextTheme"
                android:visibility="invisible" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
