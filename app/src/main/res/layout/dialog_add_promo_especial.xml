<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etTituloLayoutAddPromoEspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etTituloAddPromoEspecial"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:hint="Título"
            android:inputType="text|textCapSentences"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etSubTituloLayoutAddPromoEspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTituloLayoutAddPromoEspecial"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSubTituloAddPromoEspecial"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:hint="Subtítulo"
            android:inputType="text|textCapSentences"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView154"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView155"
        android:layout_alignLeft="@+id/imageView155"
        android:layout_alignTop="@+id/imageView155"
        android:layout_alignEnd="@+id/imageView155"
        android:layout_alignRight="@+id/imageView155"
        android:layout_alignBottom="@+id/imageView155"
        app:srcCompat="@color/amarelo" />

    <ImageView
        android:id="@+id/imageView155"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/etSubTituloLayoutAddPromoEspecial"
        android:layout_alignStart="@+id/etTituloLayoutAddPromoEspecial"
        android:layout_alignLeft="@+id/etSubTituloLayoutAddPromoEspecial"
        android:layout_alignEnd="@+id/etTituloLayoutAddPromoEspecial"
        android:layout_alignRight="@+id/etSubTituloLayoutAddPromoEspecial"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="1dp"
        android:paddingLeft="1dp"
        android:paddingTop="1dp"
        android:paddingEnd="1dp"
        android:paddingRight="1dp"
        android:paddingBottom="1dp"
        app:srcCompat="@android:color/white" />

    <ImageView
        android:id="@+id/imageView156"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView155"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:srcCompat="@mipmap/addphoto" />

    <ProgressBar
        android:id="@+id/progressBar17"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView156"
        android:layout_alignLeft="@+id/imageView156"
        android:layout_alignTop="@+id/imageView156"
        android:theme="@style/MySearchView"
        android:visibility="invisible" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etDescricaoLayoutAddPromoEspecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView155"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etDescricaoAddPromoEspecial"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:ems="10"
            android:gravity="top|center_horizontal"
            android:hint="Descrição"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etPrecoLayoutAddPromoEspecial"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescricaoLayoutAddPromoEspecial"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@android:color/darker_gray"
        android:theme="@style/MyEditTextTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etPrecoAddPromoEspecial"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:digits="0123456789.,"
            android:gravity="center_horizontal"
            android:hint="Preço"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="24sp"
            app:errorEnabled="true" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescricaoLayoutAddPromoEspecial"
        android:layout_alignBottom="@+id/etPrecoLayoutAddPromoEspecial"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/etPrecoLayoutAddPromoEspecial">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KG"
                android:textColor="@android:color/black"
                android:theme="@style/MyEditTextTheme" />

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GR"
                android:textColor="@android:color/black"
                android:theme="@style/MyEditTextTheme" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UN"
            android:textColor="@android:color/black"
            android:theme="@style/MyEditTextTheme" />

    </RadioGroup>
</RelativeLayout>