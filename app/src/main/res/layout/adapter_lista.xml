<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">

    <RelativeLayout
        android:id="@+id/relativeLayoutPadaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_default">


        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/imageView22"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/imageView22"
            android:layout_below="@+id/imageView22"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="5,0"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView23"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="Novo!"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView68"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/textView8"
            android:paddingTop="4dp"
            android:paddingBottom="3dp"
            app:srcCompat="@drawable/starcheia" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView22"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:riv_corner_radius="20dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@+id/imageView68"
            android:layout_toLeftOf="@+id/imageView68"
            android:layout_toEndOf="@+id/imageView22"
            android:layout_toRightOf="@+id/imageView22"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:text="Nome da Padaria"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView154"
            android:layout_below="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:fontFamily="serif"
            android:gravity="center_vertical"
            android:text="Ãšltima fornada:"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView154"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignBottom="@+id/imageView22"
            android:layout_marginTop="2dp"
            android:background="@drawable/ballimagesliderborda"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingRight="7dp"
            android:paddingBottom="3dp"
            android:text="38 KM"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>